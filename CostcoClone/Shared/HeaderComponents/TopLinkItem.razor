<div @onmouseover="OnMouseOver" @onmouseout="OnMouseOut" class="topLinkItem" style="position: relative;">
    @Text@((MarkupString)MarkupText)
    @if (DropdownContent != null)
    {
        <span style="font-size: 12px;" class='oi oi-caret-bottom' aria-hidden='true'></span>
    }
    @if (DisplayDropdownContent)
    {
        if (DropdownContent != null)
        {
            <div style="position: absolute; top: 17px; cursor: default; background-color: #fff; box-shadow: 0 6px 12px rgba(0,0,0,.175); border: 1px solid rgba(0,0,0,.15); z-index: 20010;">
                @DropdownContent
            </div>
        }
    }
</div>